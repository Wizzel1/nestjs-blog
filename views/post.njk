{% extends "layout.njk" %}

{% block title %}{{ post.title }} - Blog{% endblock %}

{% block content %}
    <article class="post-detail">
        <header class="post-header">
            <h1>{{ post.title }}</h1>
            <div class="post-meta">
                <span class="author">By {{ post.author }}</span>
                <span class="date">{{ (post.createdAt * 1000) | date('F j, Y') }}</span>
            </div>
        </header>

        {% if post.image %}
            <div class="post-featured-image">
                <img src="/images/{{ post.image }}" alt="{{ post.title }}" onerror="this.style.display='none'">
            </div>
        {% endif %}

        <div class="post-content">
            {{ post.content | safe }}
        </div>

        <footer class="post-footer">
            <a href="/" class="back-link">‚Üê Back to all posts</a>
        </footer>
    </article>
{% endblock %} 