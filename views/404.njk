{% extends "layout.njk" %}

{% block title %}Post Not Found - Blog{% endblock %}

{% block content %}
    <div class="error-page">
        <h1>404 - Post Not Found</h1>
        <p>Sorry, the post you're looking for doesn't exist.</p>
        <a href="/" class="back-link">‚Üê Back to all posts</a>
    </div>

    <style>
        .error-page {
            text-align: center;
            padding: 4rem 2rem;
            background: #fff;
            border-radius: 12px;
            box-shadow: 0 4px 20px rgba(0, 0, 0, 0.1);
            max-width: 600px;
            margin: 0 auto;
        }
        
        .error-page h1 {
            color: #e74c3c;
            font-size: 2.5rem;
            margin-bottom: 1rem;
        }
        
        .error-page p {
            color: #666;
            font-size: 1.2rem;
            margin-bottom: 2rem;
        }
    </style>
{% endblock %} 